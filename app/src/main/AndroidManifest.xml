            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity
            android:name=".signup"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>
